<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    tools:layout_editor_absoluteY="25dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Request_itemImg"
        android:layout_width="48dp"
        android:layout_height="37dp"
        android:layout_margin="12dp"
        android:src="@drawable/ic_user_vector"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/Request_itemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="item Title"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/Request_itemImg"
        app:layout_constraintStart_toEndOf="@+id/Request_itemImg"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/Request_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="8dp"
        android:text="Accepted"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Request_itemTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>